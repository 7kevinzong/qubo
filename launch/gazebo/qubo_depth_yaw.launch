<!-- Launches Gazebo with a basic Qubo robot spawned in the empty underwater world also spawns a thruster tranlator node. -->
<launch>
    <!-- Launch Gazebo with the empty underwater world -->
    <include file="empty_underwater_world.launch" />
    
    <!-- Spawn basic Qubo robot into the world -->
    <include file="spawn_basic_qubo.launch">
        <arg name="namespace" value="qubo_test"/>
    </include>

    <!-- spawn the thruster translator -->
    <node name="qubo_thruster_node" pkg="vl_qubo" type="qubo_gazebo_hardware_node" />

    <!-- spawn the depth and yaw controllers -->
    <node name="qubo_depth_controller" pkg="controls" type="depth_controller" />
    <node name="qubo_yaw_controller" pkg="controls" type="yaw_controller" />
</launch>
